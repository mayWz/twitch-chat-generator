    "format-prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,json,mjs,css,scss}\""
  },
  "dependencies": {
    "next": "14.2.8",
    "prettier": "^3.3.3",
    "react": "^18",
    "react-dom": "^18",
    "sass": "^1.78.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "14.2.8",
    "typescript": "^5",
    "stylelint": "^15.10.1",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-property-sort-order-smacss": "^9.1.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-standard-scss": "^10.0.0"
  },
  "packageManager": "yarn@1.22.22"
}
